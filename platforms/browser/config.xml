<?xml version='1.0' encoding='utf-8'?>
<widget id="com.abhimanyus1997.pir" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PIR Control Board</name>
    <description>
        Pipe Inspection Robot controller for Android Platform
    </description>
    <author email="abhimanyus1997@gmail.com" href="https://lnmiit.sharepoint.com/sites/pir">Abhimanyu Singh</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
